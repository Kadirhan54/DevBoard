// ============================================================================
// FILE: ApiGateway/DevBoard.ApiGateway/appsettings.json
// ============================================================================
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "e9f8b1bfe4a3d8f2c7a91c04ef9c59d6e79a5a2b91f4a87b832a45df8b1e27d0",
    "Issuer": "DevBoard.Identity",
    "Audience": "DevBoard.Users"
  },
  "ReverseProxy": {
    "Routes": {
      "identity-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/auth/{**catch-all}"
        }
      },
      "users-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        }
      },
      "tenants-route": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/tenants/{**catch-all}"
        }
      },
      "projects-route": {
        "ClusterId": "project-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/projects/{**catch-all}"
        }
      },
      "boards-route": {
        "ClusterId": "project-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/boards/{**catch-all}"
        }
      },
      "tasks-route": {
        "ClusterId": "task-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/tasks/{**catch-all}"
        }
      },
      "comments-route": {
        "ClusterId": "task-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/v1/comments/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "identity-service": {
            "Address": "http://identity-service:8080"
          }
        }
      },
      "project-cluster": {
        "Destinations": {
          "project-service": {
            "Address": "http://project-service:8080"
          }
        }
      },
      "task-cluster": {
        "Destinations": {
          "task-service": {
            "Address": "http://task-service:8080"
          }
        }
      }
    }
  }
}
